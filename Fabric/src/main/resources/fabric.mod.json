{
  "schemaVersion": 1,
  "id": "${id}",
  "name": "${name}",
  "description": "${description}",
  "version": "${version}",
  "license": "${license}",
  
  "icon": "assets/bettercontrols/icon.png",
  
  "authors": [
    "${author}"
  ],
  
  "contact": {
    "issues": "${issuesURL}",
    "sources": "${sourcesURL}"
  },
  
  "environment": "client",
  "entrypoints": {
    "client": [ "chylex.bettercontrols.BetterControlsMod" ],
    "modmenu": [ "chylex.bettercontrols.compatibility.ModMenuSupport" ]
  },
  
  "mixins": [{
    "config": "${id}.mixins.json",
    "environment": "client"
  }],
  
  "depends": {
    "fabricloader": ">=0.7.4",
    "minecraft": ">=1.17"
  }
}
